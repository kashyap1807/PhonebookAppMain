@using ClientPhonebook.ViewModel
@model UserViewModel 

<div class="container">
    <h2 class="custom-heading text-center">Update User</h2>
    <br>
    <br>
    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="UpdateUser" method="post">
                        <input type="hidden" asp-for="userId" />
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label"><i class="fa-solid fa-signature"></i> First Name</label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoginId" class="form-label"><i class="fa fa-id-badge"></i> Login ID</label>
                            <input asp-for="LoginId" class="form-control" />
                            <span asp-validation-for="LoginId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"><i class="fa fa-envelope"></i> Email</label>
                            <input type="hidden" asp-for="Email" />
                            <input asp-for="Email" class="form-control" value="@Model.Email" disabled />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactNumber" class="form-label"><i class="fa fa-phone-square"></i> Contact</label>
                            <input asp-for="ContactNumber" class="form-control" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="GetUserDetails" asp-controller="Auth" asp-route-id="@Model.LoginId" class="btn btn-outline-danger me-3"> <i class="fas fa-arrow-left"></i></a>
                            <button type="submit" class="btn btn-primary btn-block"> Update</button>
                        </div>
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</div>