@if (!User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item me-3">
            <a class="nav-link btn btn-secondary" asp-action="RegisterUser" asp-controller="Auth"><span class="fas fa-user"> Sign Up</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-primary" asp-action="LoginUser" asp-controller="Auth"><span class="fas fa-sign-in-alt"> Sign In</span></a>
        </li>


    </ul>
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item me-3">
            <a class="nav-link" asp-action="GetUserDetails" asp-route-id="@User.Identity.Name" asp-controller="Auth"><span class="fas fa-user"> @User.Identity.Name</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-danger" asp-action="Logout" asp-controller="Auth"><span class="fa fa-sign-out"> SignOut</span></a>
        </li>
    </ul>
}